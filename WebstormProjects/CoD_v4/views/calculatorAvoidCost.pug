extends layout

block content
        form#valueTypeForm(method='POST', action='/post_WSJFAvoid_item' )

            #radiobuttons
                fieldset
                    p Give your Task a name
                    input#avoidItemName(type='text' name='avoidItemName')
                    br
                    p How much will the cost be, if the cost event happens:
                    input#costavoidedtotal(type='number', name='costavoidedtotal')
                    br
                    p Is there a date when the when the cost event will occur:
                    input#timecostoccur(type='datetime', name='timecostoccur')
                    br
                    p How likely is it, that the event will occur in the next year in %:
                    input#risk(type='number', name='risk')
                    br
                    p How many weeks will it take to build the project
                    input#estimationAvoidValue(type='number', name='estimationAvoidValue')
            // Confirm Button to start calculation
            br
            button#confirmbutton(type='submit') save
            br

            // Output Element for calculations
            #redcostotal
            #output2

